<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    android:keepScreenOn="true"
    tools:context="io.github.kosmologist.workoutTrainer.Activities.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff8c00"
        android:elevation="4dp">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/classic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvDiscription"
                android:layout_alignLeft="@+id/btnInstructions"
                android:layout_alignStart="@+id/btnInstructions"
                android:layout_marginBottom="14dp"
                android:text="Classic"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_alignLeft="@+id/btnInstructions"
                android:layout_alignStart="@+id/btnInstructions"
                android:layout_below="@+id/imageView"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:text="Scientifically proven to loss weight."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/absWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classic"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/absImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAbsDiscription"
                android:layout_alignLeft="@+id/btnAbsInstructions"
                android:layout_alignStart="@+id/btnAbsInstructions"
                android:layout_marginBottom="14dp"
                android:text="Abs Workout"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvAbsDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnAbsInstructions"
                android:layout_alignStart="@+id/btnAbsInstructions"
                android:layout_below="@+id/absImg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="Get sexy, flat and frim abdominal muscles using effective abs exercises."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnAbsInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvAbsDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnAbsStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvAbsDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnAbsInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/adCard"
        android:layout_below="@+id/absWorkout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adMainView"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/armWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adCard"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/armImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvArmDiscription"
                android:layout_alignLeft="@+id/btnArmInstructions"
                android:layout_alignStart="@+id/btnArmInstructions"
                android:layout_marginBottom="14dp"
                android:text="Arm Workout"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvArmDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnArmInstructions"
                android:layout_alignStart="@+id/btnArmInstructions"
                android:layout_below="@+id/armImg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="Get sexy, flat and frim abdominal muscles using effective abs exercises."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnArmInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvArmDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnArmStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvArmDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnArmInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/armWorkout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ButtImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvButtDiscription"
                android:layout_alignLeft="@+id/btnButtInstructions"
                android:layout_alignStart="@+id/btnButtInstructions"
                android:layout_marginBottom="14dp"
                android:text="BUTT Workout"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvButtDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnButtInstructions"
                android:layout_alignStart="@+id/btnButtInstructions"
                android:layout_below="@+id/ButtImg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="In only 8 Minutes daily, these 12 typical exercises will give you the tight BUTT
                you have always dreamed of."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnButtInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvButtDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnButtStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvButtDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnButtInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/legWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttWorkout"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/legImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvLegDiscription"
                android:layout_alignLeft="@+id/btnLegInstructions"
                android:layout_alignStart="@+id/btnLegInstructions"
                android:layout_marginBottom="14dp"
                android:text="Leg Workout"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvLegDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnLegInstructions"
                android:layout_alignStart="@+id/btnLegInstructions"
                android:layout_below="@+id/legImg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="In only 8 Minutes daily, these 12 typical exercises will give you the Strong LEGS
                you have always dreamed of."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnLegInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvLegDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnLegStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvLegDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnLegInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
    </ScrollView>
</RelativeLayout>
