<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="io.github.kosmologist.a8minutes.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#ff8c00">

    </android.support.v7.widget.Toolbar>
    
    
    
    
    
    
    
    
    
    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="10dp"
        android:padding="0dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/workout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvDiscription"
                android:layout_alignLeft="@+id/btnInstructions"
                android:layout_alignStart="@+id/btnInstructions"
                android:layout_marginBottom="14dp"
                android:text="Classic"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tvDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btnInstructions"
                android:layout_alignStart="@+id/btnInstructions"
                android:layout_below="@+id/imageView"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:text="Scientifically proven to loss weight."
                android:textColor="@android:color/background_dark" />

            <Button
                android:id="@+id/btnInstructions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp"
                android:background="@android:color/transparent"
                android:text="instructions"
                android:textColor="#FF8C00" />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/tvDiscription"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnInstructions"
                android:background="@android:color/transparent"
                android:text="Start"
                android:textColor="#FF8C00" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
